#}
        {% endfor %}

        <li>
            <a href="{{ path('_new') }}">Create a new post</a>
        </li>

    <nav>
        <ul class="pager">
            <li><a href="#">Previous</a></li>
            <li><a href="#">Next</a></li>
        </ul>
    </nav>
{% endblock %}


{% block createbtn %}
    <a href="{{ path('_new') }}">
        <button type="button" class="btn btn-info btn-lg">
